{% extends 'base.html.twig' %}
{% block titrePage %}
Paiement
{% endblock %}

{% block contenu %}



<div class="container-fluid">
    <div class="row">
        <div class="col-md-9" style="text-align: left">
            <div class="card" style="width: 14 rem;">
                <b>
                    <div class="card-header">
                        Saisissez vos coordonnées bancaires
                    </div>
                </b>
                {{form_start(vueFormulaire,{'attr':{'novalidate':'novalidate'}})}}
                
                <label>&nbsp;Nom du titulaire</label><br>
                {{form_errors(vueFormulaire.nomTitulaire)}}
                {{form_widget(vueFormulaire.nomTitulaire, {'attr':{'placeholder':"Jean Dupont"}})}}<br><br>
                
                <label>&nbsp;Numéro</label><br>
                {{form_errors(vueFormulaire.numero)}}
                {{form_widget(vueFormulaire.numero, {'attr':{'placeholder':"012301230130123"}})}}<br><br>
                
                <label>&nbsp;Date d'expiration</label><br>
                {{form_errors(vueFormulaire.dateExpiration)}}
                {{form_widget(vueFormulaire.dateExpiration, {'attr':{'placeholder':"mmYY"}})}}<br><br>
                
                <label>&nbsp;Cryptogramme</label><br>
                {{form_errors(vueFormulaire.cryptogramme)}}
                {{form_widget(vueFormulaire.cryptogramme, {'attr':{'placeholder':"123"}})}}<br><br>
                <center>
                    <br><pre> <button type="submit" class="btn btn-secondary">Valider</button></pre>
                    
                </center>
                
                {{form_end(vueFormulaire)}}
                
                
            </div>
        </div>
    </div>
</div>
{% endblock %}