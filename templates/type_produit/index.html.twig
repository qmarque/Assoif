    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type_produit in type_produits %}
            <tr>
                <td>{{ type_produit.nom }}</td>
                <td>
                    <a href="{{ path('type_produit_show', {'id': type_produit.id}) }}">Consulter</a>
