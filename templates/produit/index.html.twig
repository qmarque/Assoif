{% extends 'base.html.twig' %}

{% block menu %}
{% if action == "assoiffe" %}
<nav class="navbar navbar-expand navbar-dark bg-dark" >
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarText">
    <ul class="navbar-nav mr-auto">
      
      <li class="nav-item active">
        <a class="nav-link" href={{path('accueil_assoiffe')}}>Accueil <span class="sr-only">(current)</span></a>
      </li>
      
      
    </ul>
    
    <ul class="navbar-nav ml-md-auto">
      <li class="nav-item active">
        <a class="nav-link" href="/panier">
          <i class="icon-shopping-basket"></i>
          Mon panier
          <span class="sr-only">(current)</span>
        </a>
      </li>
      
      
    </ul>
    
  </div>
</nav>


{% else %}
<nav class="navbar navbar-expand navbar-dark bg-dark" >
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  
  
  <div class="collapse navbar-collapse " id="navbarText">
    <ul class="navbar-nav mr-auto">
      
      <li class="nav-item active">
        <a class="nav-link" href={{path('accueil_assoiffeur')}}> Accueil </a>
      </li>
      
      <li class="nav-item active">
        <a class="nav-link" href={{path('produit_index_assoiffeur')}}>Mes produits </a>
      </li>
      
      
      
    </ul>
    
    
    
  </div>
</nav>


{% endif %}

{% endblock %}


{% block contenu %}
<center>
  {% if action == "assoiffeur" %}
  <h1>Liste des produits</h1>
  {% else %}
  <h1>Choisir un produit</h1>
  {% endif %}
</center>
<table class="table">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Prix</th>
      <th>Dosage</th>
      {% if action == "assoiffeur" %}
      <th>Stock</th>
      {% endif %}
      <th>Photo</th>
      {% if action == "assoiffeur" %}
      <th>Modifier</th>
      {% else %}
      <th></th>
      {% endif %}
    </tr>
  </thead>
  <tbody>
    {% for produit in produits %}
    <tr>
      <td>{{ produit.nom }}</td>
      <td>{{ produit.prix }}</td>
      <td>{{ produit.dosage }}</td>
      {% if action == "assoiffeur" %}
      <td>{{ produit.stock }}</td>
      
      {% endif %}
      <td><img src={{ produit.photo }} style="width:80px; height:120px; "></td>
      <td>
        {% if action == "assoiffe" %}
     
        <a class="btn btn-success"  href="{{ path('panier_add' , {'id' : produit.id}) }}" role="button"><i class="icon-plus-circled" ></i>Ajouter</a>

        {% endif %}
        {% if action == "assoiffeur" %}
        <a href="{{ path('produit_edit', {'id': produit.id}) }}" style="color: grey">
          <i class="icon-pencil"></i>
        </a>
        {% endif %}
      </td>
    </tr>
    {% else %}
    <tr>
      <td colspan="7">no records found</td>
    </tr>
    {% endfor %}
  </tbody>
</table>
<center>
  {% if action == "assoiffeur" %}
  <a class="btn btn-secondary"   href="{{ path('produit_new') }}" role="button"><i class="icon-plus-circled" ></i>Cr√©er un nouveau produit</a>
  
  {% endif %}
</center>

{% endblock %}
