{% extends 'base.html.twig' %}

{% block titrePage %}
Panier
{% endblock %}
{% block contenu %}
    {% if items | length > 0 %}
    <table class="table">
        <thead>
            <tr>
                <th> Produit </th>
                <th> Prix </th>
                <th> Quantité </th>
                <th> Total </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
            <tr></tr>
            <td>{{item.produit.nom}}</td>
            <td>{{item.produit.prix}}</td>
            <td>{{item.quantity}}</td>
            <td>{{item.produit.prix * item.quantity}}€</td>
            <td>
                {% if action == "assoiffe" %}
                <a href="{{ path('panier_remove', {'id' : item.produit.id}) }}" style="color: red">
                <i class="icon-trash"></i>
            </a>
            {% endif %}

        </td>
        {% endfor  %}
        
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class = "text-right"> Total : </td>
            <td> {{total}} €</td>
            <td></td>
        </tr>
    </tfoot>
</table>

{% endif %}
{% if action == "assoiffe" %}
<a class="btn btn-success btn-lg btn-block"  href="/assoiffe/panier/payer" role="button">Payer</a>
{% else %}
<center><br>
<a class="btn btn-success "  href="{{path('accueil_assoiffeur')}}" role="button">Commande prête</a>
</center>
{% endif %}

{% endblock %}
